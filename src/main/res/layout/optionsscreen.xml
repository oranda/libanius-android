<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:orientation="vertical" >

    <LinearLayout
            android:id="@+id/quizGroupSelectionLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            >
        <TextView
                android:id="@+id/searchLabel"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="20sp"
                android:gravity="center"
                android:text="@string/select_quiz_groups"
                />
        <LinearLayout
                android:id="@+id/quizGroupsLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/centerLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
        <Button
                android:id="@+id/gotoQuizButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="@string/go_to_quiz"
                android:onClick="gotoQuiz"
                />
    </LinearLayout>

    <LinearLayout
            android:id="@+id/searchDictionaryLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/centerLayout"
            >
        <TextView
                android:id="@+id/searchLabel"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_dictionary"
                />
        <EditText
                android:id="@+id/searchInput"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        <LinearLayout
                android:id="@+id/searchResultsLayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
    </LinearLayout>


    <LinearLayout
            android:id="@+id/bottomLine"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

        <TextView
                android:id="@+id/status"
                android:orientation="vertical"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" "
                />
    </LinearLayout>

</RelativeLayout>

